
//Си
#include <stdio.h>
#include <math.h>


int main()
{
    int i = 0; // создаю переменную для подсчета количества делений
    float m, n; // создаю перменные для деления
    scanf("%f", &m); // ввожу первую перменную
    scanf("%f", &n); // ввожу вторую перменную 
    while ((m / n) == floor(m / n)) // создаю условие при котором деление m на n должно быть равно округленному в верхную сторолону m / n 
    {
        i +=1; // подсчитываю количество делений 
        m = m / n; // изменяю перменную m в соответствии с полученным делением 
    }
    printf("Количество делений числа m на n равно: %d", i); // вывожу количество делений


    return 0;
}

// Питон
i = 1;
while(i <= 20): // создаю условие для перевода дм в см до 20
    b = int(i * 2.5); // перевожу дм в см
    print(i,"дм = " , b, "см") // вывожу таблицу с переводом
    i +=1; // увеличиваю i для продолжения цикла до 20
    

C++
#include <iostream>
#include <math.h>

using namespace std;

int main (){

    int i = 0; // создаю переменную для подсчета количества делений
    int m, n; // создаю перменные для деления
    cin >> m;
    cin >> n;
    while ((m % n) == 0) // создаю условие при котором деление m на n должно остаток равен 0
    {
        i +=1; // подсчитываю количество делений 
        m = m / n; // изменяю перменную m в соответствии с полученным делением 
    }
    cout << "Количеств возможных делений без остатка m на n: " << i;

    return 0;
}



// Питон
i = 1;
while(i <= 20): // создаю условие для перевода дм в см до 20
    b = int(i * 2.5); // перевожу дм в см
    print(i,"дм = " , b, "см") // вывожу таблицу с переводом
    i +=1; // увеличиваю i для продолжения цикла до 20
    

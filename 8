7 задача питон 

n, m = int(input()), int(input())
matrix = []
for i in range(n):
   matrix.append([int(input()) for _ in range(m)]) 

for i in range(n):
   for j in range(m):
      if matrix[i][j] % 2 != 0:  
          s += matrix[i][j]  

print(s) 


17 задача С++
#include <iostream>

using namespace std;

int main()
{
    int m, n,  count;
    
    cin >> m;
    cin >> n;
    int mat[m][n];

    for (int i = 0; i < m; i++)
    {
        for (int j = 0; j < n; j++)
        {
            cin >> mat[i][j];
        }
    }
    for (int i = 0; i < m; i++)
    {
        for (int j = 0; j < n; j++)
        {
            cout << mat[i][j] << "\t";
        }
        cout << endl;
    }
    for (int i = 0; i < m; i++)
    {
        double sum = 0;
        for (int j = 0; j < n; j++)
        {
            sum += mat[i][j];
        }
        double sred = sum / n;
        count = 0;
        for (int j = 0; j < n; j++)
        {
            if (mat[i][j] < sred)
            {
                count++;
            }
        }
        cout << count;
    }

    return 0;
}
